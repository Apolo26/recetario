            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      document
        .getElementById("profileImage")
        .addEventListener("click", function () {
          var dropdownMenu = document.getElementById("dropdownMenu");
          dropdownMenu.classList.toggle("hidden");
        });

      window.addEventListener("click", function (e) {
        var profileImage = document.getElementById("profileImage");
        var dropdownMenu = document.getElementById("dropdownMenu");
        if (
          !profileImage.contains(e.target) &&
          !dropdownMenu.contains(e.target)
        ) {
          dropdownMenu.classList.add("hidden");
        }
      });
      function updateDateTime() {
        const dateTimeSpan = document.getElementById("dateTime");
        const now = new Date();
        const options = {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric",
          hour: "numeric",
          minute: "numeric",
          second: "numeric",
          hour12: false,
        };
        const formattedDateTime = now.toLocaleDateString("es-ES", options);
        dateTimeSpan.innerHTML = `<strong class="text-purple-500 hover:text-purple-800 select-none">${formattedDateTime}</strong>`;
      }

      window.onload = () => {
        updateDateTime();
        setInterval(updateDateTime, 1000);
      };
    </script>
  </body>
</html>
